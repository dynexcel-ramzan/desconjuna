<odoo>

    <record id="view_maintenance_order_pivot" model="ir.ui.view">
         <field name="name">maintenance.report.pivot</field>
         <field name="model">maintenance.report</field>
         <field name="arch" type="xml">
             <pivot string="Maintenance Report" disable_linking="True" sample="1">
                 <field name="user_id" type="col"/>
                 <field name="schedule_start_date" interval="month" type="row"/>
                 <field name="price_subtotal" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="action_maintenancne_report" model="ir.actions.act_window">
        <field name="name">Maintenance Analysis</field>
        <field name="res_model">maintenance.report</field>
        <field name="view_mode">pivot</field>
<!--         <field name="view_id"></field>   -->
<!-- force empty -->
<!--         <field name="search_view_id"/> -->
<!--         <field name="context">{'search_default_Sales':1, 'group_by_no_leaf':1,'group_by':[]}</field>
        <field name="help">This report performs analysis on your quotations and sales orders. Analysis check your sales revenues and sort it by different group criteria (salesman, partner, product, etc.) Use this report to perform analysis on sales not having invoiced yet. If you want to analyse your turnover, you should use the Invoice Analysis report in the Accounting application.</field> -->
    </record>

    <menuitem id="menu_report_maintenance"
            name="Maintenance"
            action="action_maintenancne_report"
            parent="maintenance.maintenance_request_reporting"
            sequence="336"/>
