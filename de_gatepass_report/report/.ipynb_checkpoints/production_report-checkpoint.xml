<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="production_report"
            model="ir.actions.report">
        <field name="name">Production Report</field>
        <field name="model">stock.transfer.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">de_stock_transfer_report.production_report_pdf</field>
    </record>

    <template id="production_report_pdf">
        <t t-call="web.html_container">
            <div class="centered" style="width: 45%">
                <t t-call="web.external_layout">
                    <div class="row">
                        <div class="col-4"/>
                            <div class="col-4">
                                <img src='/web/binary/company_logo' style="width:70%"/>
                            </div>
                        <div class="col-4"/>
                    </div>
                    <br></br>
                    <div class="page">
                        <h3 style=" text-align: center">Production Summary</h3>
                        <br></br>
                        <div style="width: 100%;">
                            <table class="table table-condensed" style="border: 1px solid black;">
                                <thead>
                                    <tr>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">SR No #</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Date</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Barcode</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Size</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Production QTY</b>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="index" t-value="1"/>
                                    <t t-foreach="stock_ids" t-as="stock">
                                        <t t-foreach="stock.move_ids_without_package" t-as="line">
                                            <tr>
                                                <td>
                                                    <t t-esc="index"/>
                                                    <t t-set="index" t-value="index+1"/>
                                                </td>
                                                <td>
                                                    <span t-esc="stock.date_done"/>
                                                </td>

                                                <td>
                                                    <span t-esc="line.product_id.barcode"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line.product_id.x_studio_size"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line.quantity_done"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
        </t>

    </template>
</odoo>

