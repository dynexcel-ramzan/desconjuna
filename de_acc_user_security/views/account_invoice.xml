<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Add commission in invoice list view-->
        <record id="account_move_form_view_inherit" model="ir.ui.view">
            <field name="name">account.move.form.view.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/header[1]/button[@name='action_post']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>