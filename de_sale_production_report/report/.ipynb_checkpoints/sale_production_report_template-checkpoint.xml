<odoo>
  <data>
     <template id="report_sale_production_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="row justify-content-end">
                            <div class="col-12">
                                <p style="margin-left: 300px; margin-top: 0px; margin-bottom: 10px; padding: 20px;">                                
                                    <strong style="font-size: 16;"> SO#</strong>
                                        <span style="font-weight: bold;" t-field="o.name"/> &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;Date:<span t-field="o.date_order"/> 
                               </p>
                                 
                               <p style="margin-left: 300px; margin-top: 5px; margin-bottom: 10px; padding: 20px; font-weight: bold;">
                                    <span style="font-size: 16;" t-field="o.partner_id"/>
                               </p>     
                                <table class="table table-bordered" style="table-layout: fixed">
                                    <thead>
                                        <tr>
                                            <th>MO#</th>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Shade</th>
                                          
                                        </tr>
                                    </thead>
                             
                                     <t t-set="totcost" t-value="0"/>
                                    <tbody>
                                      <t t-foreach="request.env['mrp.production'].search([('origin','=', o.name)])" t-as="line">
                                        <tr>
                                             <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_qty"/>
                                            </td>
                                            <t t-set="totcost" t-value="totcost + line.product_qty"/>
                                            <td>
                                            <t t-foreach="o.order_line.analytic_tag_ids" t-as="tag"> 
                                                <span t-field="tag.name"/>
                                            </t>
                                            </td>
                                        </tr>
                                      </t>
                                        <tr>
                                             <td>
                                                 Total
                                            </td>
                                            <td>
<!--                                                 <span t-esc="qty"/> -->
                                            </td>
                                            <td>
                                                <span t-esc="totcost"/>
                                            </td>
                                            <td>
<!--                                                 <span t-esc="totcost"/> -->
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
<!--                                <p style="margin: 0px; padding: 0px; font-weight: bold;">-->
<!--&lt;!&ndash;                                    <span t-field="o.note"/>&ndash;&gt;-->
<!--                                </p>-->
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="sale_production_order_report ">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="de_mrp_cost.report_sale_production_template"/>
            </t>
        </t>
    </template>
  </data>
</odoo>