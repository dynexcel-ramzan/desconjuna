<odoo>
  <data>
           <!--Display form view of wizard-->
        <record id="view_greige_stock_report_wizard" model="ir.ui.view">
            <field name="name">view.greige.stock.report.wizard</field>
            <field name="model">greige.stock.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_lot_id"/>
                            <field name="owner_ids" domain="[('category_id','=', 14)]" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="to_lot_id"/>
                            <field name="zero_balance"/>
                            <field name="negative_balance"/>
                        </group>
                    </group>

                    <footer>
                        <button name="check_report"
                            string="Greige Stock Status"
                            type="object"
                            class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="greige_stock_wizard_action" model="ir.actions.act_window">
            <field name="name">Greige Stock Status Information</field>
            <field name="res_model">greige.stock.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_greige_stock_report_wizard"/>
        </record>
      <menuitem action="greige_stock_wizard_action" id="greige_stock_status_report_menu" name="Greige Stock Status" parent="stock.menu_warehouse_report" sequence="120"/>


  </data>
</odoo>