<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Show on sale order form view-->
    <record id="inherit_sale_view_order_form" model="ir.ui.view">
        <field name="name">inherit.sale.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="sinjing" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                <field name="packing" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                <field name="packing_material" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_uom']" position="after">
                <field name="greige_width" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                <field name="required_gsm" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
            </xpath>
        </field>
    </record>

</odoo>