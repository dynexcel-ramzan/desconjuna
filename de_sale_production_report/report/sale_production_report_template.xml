<odoo>
<!--  <data>-->
     <template id="report_sale_production_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="row justify-content-end">
                            <div class="col-12">
                                <div class="col-12">
                                   <h2 style="margin-left: 300px;"><u> <strong> SO#</strong>
                                        <span style="font-weight: bold; font-size: 24;" t-field="o.name"/></u></h2>
                               </div>
                               <div class="col-12">
                                  <p style="margin-left: 500px;"> Date: <span t-field="o.date_order"/> </p>
                                 </div>
                               <div class="col-12">
                                  <h4 style="margin-left: 300px;">  <span style="font-size: 20;" t-field="o.partner_id"/> </h4>
                                 
                               </div>
                                <table class="table table-bordered" style="table-layout: fixed">
                                    <thead>
                                        <tr>
                                            <th>MO#</th>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Shade</th>
                                          
                                        </tr>
                                    </thead>
                             
                                     <t t-set="totcost" t-value="0"/>
                                    <tbody>
                                      <t t-foreach="request.env['mrp.production'].search([('origin','=', o.name)])" t-as="line">
                                        <tr>
                                             <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_qty"/>
                                            </td>
                                            <t t-set="totcost" t-value="totcost + line.product_qty"/>
                                            <td>
                                            <t t-foreach="line.product_id.attribute_value_ids" t-as="tag"> 
                                                <span t-field="tag.name"/>
                                            </t>
                                            </td>
                                        </tr>
                                      </t>
                                        <tr>
                                             <td>
                                                 Total
                                            </td>
                                            <td>
<!--                                                 <span t-esc="qty"/> -->
                                            </td>
                                            <td>
                                                <span t-esc="totcost"/>
                                            </td>
                                            <td>
<!--                                                 <span t-esc="totcost"/> -->
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
