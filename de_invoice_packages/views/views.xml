<odoo>
    <record id="view_account_move_form_inherit_test" model="ir.ui.view">
        <field name="name">view.account.move.form.inherit</field>
        <field name="model">account.move</field>
       <!-- <field name="type">form</field> -->
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]//field[@name='account_id']" position="after">
                 <field name="package_id" force_save='1'/>
                 <field name="shipping_quantity_r"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]/field[@name='line_ids']/tree[1]/field[@name='name']" position="after">
                <field name="package_id"/>
            </xpath>

        </field>
    </record>
    
</odoo>