<odoo>
    <record id="view_account_invoice_form_inherit" model="ir.ui.view">
        <field name="name">view.account.invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='account_id']" position="after">
                <field name="package_id"/>
              </xpath>
        </field>
    </record>
    
</odoo>