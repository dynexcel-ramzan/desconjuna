<odoo>
  <data>
           <!--Display form view of wizard-->
        <record id="view_sale_order_status_report_wizard" model="ir.ui.view">
            <field name="name">view.greige.stock.report.wizard</field>
            <field name="model">sale.order.status.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_sale_order"/>
                            <field name="owner_ids" domain="[('category_id','=', 14)]" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="to_sale_order"/>
<!--                            <field name="zero_balance"/>-->
<!--                            <field name="negative_balance"/>-->
                        </group>
                    </group>

                    <footer>
                        <button name="check_report"
                            string="Sale Order Status"
                            type="object"
                            class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="sale_order_status_wizard_action" model="ir.actions.act_window">
            <field name="name">Sale Order Status Information</field>
            <field name="res_model">sale.order.status.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_sale_order_status_report_wizard"/>
        </record>
      <menuitem action="sale_order_status_wizard_action" id="sale_order_status_report_menu" name="Sale Order Status" parent="sale.menu_sale_report" sequence="2"/>


  </data>
</odoo>