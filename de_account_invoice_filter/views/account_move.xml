<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Add Referene in quick search filter-->
        <record id="account_invoice_search_inherit" model="ir.ui.view">
            <field name="name">account.invoice.search.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="ref"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="id"/>
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="c_agent_id"/>
                </xpath>
            </field>
        </record>
        <!--Show referene on invoice List view-->
        <record id="account_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.invoice.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="before">
                    <field name="ref"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>