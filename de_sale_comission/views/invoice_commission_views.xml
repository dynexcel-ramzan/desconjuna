<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <group string="Agent">
                    <field name="agent_id"/>
                    <field name="comission"/> 
                </group>
            </xpath>
            <xpath expr="//group[@name='purchase']" position="after">
                <group string="Agent" name="agent" priority="3">
                    <field name="is_agent"/> 
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="agent_id"/>
            </xpath>
        </field>
    </record>
    <record id="account_view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="agent_id"/>
                <field name="commission_rate" invisible="1"/>
                <field name="comission" invisible="1"/>
                <field name="commission" groups= "de_sale_comission.group_comission_rate"/>
                <field name="commission_settled" groups= "de_sale_comission.group_comission_rate"/>
            </xpath>
             <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="after">
                 <field name="commission_rate"   attrs="{'readonly': [('shiping_grade','!=','fresh')]}"  groups= "de_sale_comission.group_comission_rate"/>
                 <field name="shiping_grade"  invisible="1" />
             </xpath>
            <xpath expr="//field[@name='line_ids']//tree//field[@name='package_id']" position="after">
                <field name="commission_rate"  attrs="{'readonly': [('shiping_grade','!=','fresh')]}"  groups= "de_sale_comission.group_comission_rate"/>
                <field name="shiping_grade"  invisible="1" />

            </xpath>
        </field>
    </record>   
</odoo>